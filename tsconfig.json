{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "DOM.Iterable",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "removeComments": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "vue"
    ]
  },
  "include": ["vite.config.*", "src/**/*", "src/**/*.vue"],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
